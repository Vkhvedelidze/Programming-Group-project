<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.programminggroupproject.controller.ClientController"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Top bar -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #343a40; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="CAR SERVICINATOR 3000"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard"
                onAction="#handleBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 6 12;"/>
    </HBox>

    <!-- Content -->
    <VBox spacing="15" alignment="CENTER">
        <Label text="Request Service">
            <font>
                <Font name="System Bold" size="26"/>
            </font>
        </Label>

        <Label fx:id="debugLabel"
               text="Client request screen WIP â€“ here you will choose vehicle, shop, and services."
               style="-fx-text-fill: #666;"/>
    </VBox>

</VBox>