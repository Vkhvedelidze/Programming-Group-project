<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.programminggroupproject.controller.ClientController"
      alignment="TOP_CENTER"
      spacing="20"
      prefWidth="800" prefHeight="600"
      style="-fx-background-color: #f5f5f5;">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Top bar -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: #343a40; -fx-padding: 15; -fx-background-radius: 8;">
        <Label text="CAR SERVICINATOR 3000"
               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Back to Dashboard"
                onAction="#handleBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 6 12;"/>
        <Button text="View Payments" onAction="#handleViewPayments"/>
    </HBox>

    <!-- Content -->
    <VBox spacing="15" alignment="CENTER">
        <Label text="Request Service">
            <font>
                <Font name="System Bold" size="26"/>
            </font>
        </Label>

        <Label text="Fill in the details below to request a service for your vehicle."
               style="-fx-text-fill: #666;"/>

        <VBox spacing="10" maxWidth="400">

            <Label text="Select Vehicle"/>
            <ComboBox fx:id="vehicleComboBox"
                      promptText="Choose vehicle"/>

            <Label text="Select Mechanic Shop"/>
            <ComboBox fx:id="shopComboBox"
                      promptText="Choose mechanic shop"/>

            <Label text="Choose the services you want" />

            <!-- Service catalog -->
            <VBox spacing="5">
                <CheckBox fx:id="serviceOilCheck"
                          text="ðŸ”§ Oil &amp; Filters / Basic service"/>
                <CheckBox fx:id="serviceTiresCheck"
                          text="ðŸ›ž Tires &amp; Alignment"/>
                <CheckBox fx:id="serviceBrakesCheck"
                          text="ðŸ›‘ Brakes"/>
                <CheckBox fx:id="serviceBatteryCheck"
                          text="ðŸ”‹ Battery &amp; Electrical"/>
                <CheckBox fx:id="serviceFluidsCheck"
                          text="ðŸ’§ Fluids &amp; Leaks"/>
                <CheckBox fx:id="serviceEnginePerfCheck"
                          text="ðŸ’¨ Engine Performance"/>
                <CheckBox fx:id="serviceCleaningCheck"
                          text="ðŸ§¼ Cleaning / Detailing"/>
                <CheckBox fx:id="serviceCheckupCheck"
                          text="ðŸ§ª General check-up"/>
            </VBox>

            <!-- Mechanic permissions -->
            <Label text="Mechanic permissions" />

            <VBox spacing="5">
                <RadioButton fx:id="permissionStrictRadio"
                             text="Only perform the selected services, nothing else."/>

                <HBox spacing="5" alignment="CENTER_LEFT">
                    <RadioButton fx:id="permissionExtraRadio"
                                 text="You may do extra work up to:"/>
                    <TextField fx:id="permissionBudgetField"
                               promptText="â‚¬ limit"
                               prefWidth="80"/>
                </HBox>

                <RadioButton fx:id="permissionAskRadio"
                             text="Contact me before doing anything else."/>
            </VBox>

            <!-- Notes -->
            <Label text="Additional notes (optional)"/>
            <TextArea fx:id="notesArea"
                      promptText="Anything else the mechanic should know?"
                      prefRowCount="3"/>

            <Button text="Submit Request"
                    onAction="#handleSubmit"
                    style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-padding: 8 16;"/>

            <Label fx:id="messageLabel"
                   text=""
                   style="-fx-text-fill: #28a745;"/>

            <Label fx:id="debugLabel"
                   text="Client request screen"
                   style="-fx-text-fill: #999; -fx-font-size: 11;"/>
        </VBox>
    </VBox>

</VBox>