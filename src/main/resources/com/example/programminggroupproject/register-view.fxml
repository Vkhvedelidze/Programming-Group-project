<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.programminggroupproject.controller.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Register New Account">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <TextField fx:id="fullNameField" promptText="Full Name" maxWidth="300.0"/>
    <TextField fx:id="usernameField" promptText="Email (e.g., user@example.com)" maxWidth="300.0"/>
    <PasswordField fx:id="passwordField" promptText="Password (min 6 characters)" maxWidth="300.0"/>
    
    <ComboBox fx:id="roleComboBox" promptText="Select Role" maxWidth="300.0"/>

    <Label fx:id="messageLabel" textFill="red" />

    <Button text="Register" onAction="#handleRegister" maxWidth="300.0" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    <Button text="Back to Login" onAction="#handleBack" maxWidth="300.0"/>
</VBox>
