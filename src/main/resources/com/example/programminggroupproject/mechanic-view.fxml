<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.programminggroupproject.controller.MechanicController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Mechanic Dashboard">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <!-- Enhanced Filter Section -->
    <VBox spacing="10.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
        <Label text="Filter Service Requests" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        
        <HBox spacing="15.0" alignment="CENTER_LEFT">
            <!-- Status Filter -->
            <VBox spacing="5">
                <Label text="Status:" style="-fx-font-size: 11px;"/>
                <ComboBox fx:id="statusFilterComboBox" prefWidth="150" promptText="All Statuses"/>
            </VBox>
            
            <!-- Client Filter -->
            <VBox spacing="5">
                <Label text="Client:" style="-fx-font-size: 11px;"/>
                <ComboBox fx:id="clientFilterComboBox" prefWidth="200" promptText="All Clients"/>
            </VBox>
            
            <!-- Search Field -->
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Search:" style="-fx-font-size: 11px;"/>
                <TextField fx:id="searchField" promptText="Search vehicle or services..." prefWidth="250.0"/>
            </VBox>
            
            <!-- Filter Buttons -->
            <VBox spacing="5" alignment="BOTTOM_CENTER">
                <Label text=" " style="-fx-font-size: 11px;"/>
                <HBox spacing="10">
                    <Button text="Apply Filter" onAction="#handleApplyFilter" styleClass="button-primary"/>
                    <Button text="Clear" onAction="#handleClearFilter" styleClass="button-info"/>
                </HBox>
            </VBox>
        </HBox>
        
        <!-- Results Count -->
        <Label fx:id="filterResultsLabel" text="" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
    </VBox>

    <TableView fx:id="requestsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colClient" text="Client" prefWidth="150.0" />
            <TableColumn fx:id="colVehicle" text="Vehicle" prefWidth="150.0" />
            <TableColumn fx:id="colService" text="Service" prefWidth="250.0" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100.0" />
            <TableColumn fx:id="colDate" text="Date" prefWidth="150.0" />
        </columns>
    </TableView>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button text="Accept Request" onAction="#handleAccept" style="-fx-background-color: #17a2b8; -fx-text-fill: white;" />
        <Button text="Reject Request" onAction="#handleReject" style="-fx-background-color: #dc3545; -fx-text-fill: white;" />
        <Button text="Complete Service" onAction="#handleComplete" style="-fx-background-color: #28a745; -fx-text-fill: white;" />
    </HBox>

    <Button text="Back to Dashboard" onAction="#handleBack" />
</VBox>
