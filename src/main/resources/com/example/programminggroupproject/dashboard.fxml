<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.programminggroupproject.controller.DashboardController"
      prefWidth="800" prefHeight="600" style="-fx-background-color: #f5f5f5;">

    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #343a40; -fx-padding: 15;">
        <Label text="CAR SERVICINATOR 3000" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="welcomeLabel" text="Welcome!" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        <Region minWidth="20"/>
        <Button text="Logout" onAction="#handleLogout" 
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 8 15;"/>
    </HBox>

    <VBox alignment="CENTER" spacing="30" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="50.0" right="40.0" bottom="40.0" left="40.0"/>
        </padding>

        <Label text="Dashboard">
            <font>
                <Font name="System Bold" size="32.0"/>
            </font>
        </Label>

        <Label text="Welcome to your dashboard!">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>

        <!-- Client role buttons -->
        <Button fx:id="clientButton"
                text="Request Service"
                prefWidth="250"
                visible="false"
                onAction="#handleClientAction"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12;"/>
        
        <Button fx:id="clientRequestsButton"
                text="My Requests"
                prefWidth="250"
                visible="false"
                onAction="#handleClientRequestsAction"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12;"/>

        <!-- Mechanic role button -->
        <Button fx:id="mechanicButton"
                text="View Assigned Jobs"
                prefWidth="250"
                visible="false"
                onAction="#handleMechanicAction"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12;"/>

        <!-- Admin role button -->
        <Button fx:id="adminButton"
                text="Manage System"
                prefWidth="250"
                visible="false"
                onAction="#handleAdminAction"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12;"/>
        
        <Label text="(Features coming soon)" style="-fx-text-fill: #666; -fx-font-size: 12px;"/>
    </VBox>
</VBox>


